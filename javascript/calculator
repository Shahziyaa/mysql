<!DOCTYPE html>
<html>
<head>
  <title>Chachi's Calculator</title>
</head>
<body>
  <style>
    #calculator {
      padding: 30px;
      border: 2px solid #111;
      border-radius: 80px;
      text-align: center;
      width: 250px;
      margin-left: 100px;
    }

    input,select,button {
      margin: 10px;
      padding: 10px;
      font-size: 16px;
      width: 80%;
    }
  </style>

  <h2>CHACHI'S CALCULATOR</h2>

  <div class="container" id="calculator" >
  
  <input type="number" id="num1" placeholder="num1"><br><br>

  <select id="operator">
    <option value="+"> + (add)</option>
    <option value="-"> - (subtract)</option>
    <option value="*"> * (multiply)</option>
    <option value="/"> / (divide)</option>
  </select><br><br>
  
  <input type="number" id="num2" placeholder="num2"><br><br>

  <button onclick="calculate()">=</button>

  <p id="result"></p>
</div>


  <script>
    function add(a1,b1)
    {
      return a1+b1;
    }
    function sub(a1,b1)
    {
      return a1-b1;
    }
    function mul(a1,b1)
    {
      return a1*b1;
    }
    function div(a1,b1)
    {
      return a1/b1;
    }
    function calculate() {
      var a = parseFloat(document.getElementById("num1").value);
      var b = parseFloat(document.getElementById("num2").value);
      var op = document.getElementById("operator").value;
      var result;

      if (op === "+") {
        result = add(a,b);
      } else if (op === "-") {
        result = sub(a,b);
      } else if (op === "*") {
        result = mul(a,b);
      } else if (op === "/") {
        if (b === 0) {
          result = "Error!! Division by zero";
        } else {
          result = div(a,b);
        }
      }

      document.getElementById("result").innerText = "Result: " + result;
    }
  </script>

</body>
</html>
